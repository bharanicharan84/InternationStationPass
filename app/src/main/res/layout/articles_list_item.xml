<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/passDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="@string/place_autocomplete_search_hint"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/passDuration"
        android:textSize="15sp"
        android:text="@string/tagmanager_preview_dialog_button"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/passTime"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>
